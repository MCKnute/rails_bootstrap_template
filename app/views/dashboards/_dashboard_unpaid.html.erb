<h2>Outstanding Invoices</h2>
<table class="table table-striped">
	<thead>
		<tr>
			<td>Client Name</td>
			<td>Amount Due</td>
		</tr>
	</thead>
	<tbody>
		<% if @unpaidvoices %>
			<% @unpaidvoices.each do |unpaid| %></td>
		<tr>
			<td><%= unpaid.client.name %></td>
			<td><%= unpaid.amount %></td>
		</tr>
	</tbody>
	<% end %>
<% end %>
</table>