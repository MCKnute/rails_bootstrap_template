<h2>Client List</h2>
<% if @clients == [] %>
	<h3>You currently have no clients!</h3>
<% else %>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Address</th>
			<th>Phone Number</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody>
	<% @clients.each do |client| %>
		<tr>
			<td><a href="/companies/clients/<%= client.id %>"><%= client.name %> <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></a></td>
			<td><%= render 'modal', :client => client %></td>
			<td><%= client.phone %></td>
			<td><%= client.email %></td>
			<td class="text-right">
				<button class="addNewinvoice btn btn-success btn-sm" data-toggle="modal" data-target="#addModal"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span><span class="glyphicon glyphicon-file" aria-hidden="true"></span> New Invoice
				</button>
				<%= render partial: "dashboard_addinvoice", locals: { client: client } %>
				<a href="/companies/clients/<%= client.id %>/edit" class="btn btn-sm btn-primary" type="button"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit Client</a>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>
<% end %>
